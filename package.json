{
  "name": "grimoirejs",
  "version": "0.11.7",
  "description": "A service-oriented WebGL framework.",
  "main": "./ref/index.js",
  "typings": "./ref/index.d.ts",
  "files": [
    "ref",
    "register",
    "lib"
  ],
  "keywords": [
    "grimoire"
  ],
  "dependencies": {
    "@types/node": "^6.0.46",
    "babel-loader": "^6.2.7",
    "events": "^1.1.1",
    "ts-loader": "^1.2.0",
    "typescript": "^2.0.9",
    "watch": "^1.0.1",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "grimoirejs-inquisitor": "^1.0.2",
    "jsdom": "^9.8.3",
    "lodash": "^4.16.6",
    "progress": "^1.1.8",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "webpack-shell-plugin": "^0.4.3",
    "xhr-mock": "^1.6.0",
    "xmldom": "^0.1.22"
  },
  "repository": "http://github.com/GrimoireGL/GrimoireJS",
  "scripts": {
    "test": "tsc --outDir ./lib && babel ./lib --presets es2015  --plugin transform-runtime --out-dir ./lib-es5 && babel ./test --presets es2015  --plugin transform-runtime --out-dir ./test-es5 && ava ./test-es5/**/*Test.js --verbose ",
    "prepublish": "npm run build && npm test",
    "start":"webpack --progress --watch",
    "build": "webpack --progress",
    "generate-expose": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref"
  },
  "grimoire": {
    "doc": {
      "src": "./doc",
      "header": "./doc/header.md",
      "footer": "./doc/footer.md",
      "dest": "./lib-md/index.md"
    }
  },
  "license": "MIT"
}

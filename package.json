{
  "name": "grimoirejs",
  "version": "0.11.2",
  "description": "A service-oriented WebGL framework.",
  "main": "./ref/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "ref",
    "register",
    "lib"

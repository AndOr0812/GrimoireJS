    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "grimoirejs-inquisitor": "^1.0.2",
    "jsdom": "^9.8.3",
    "lodash": "^4.16.6",
    "progress": "^1.1.8",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "xhr-mock": "^1.6.0",
    "xmldom": "^0.1.22"
  },
  "repository": "http://github.com/GrimoireGL/GrimoireJS",
  "scripts": {

<?xml version="1.0" encoding="UTF-8"?>
<recipe xmlns:d="http://grimoire.gl/ns/recipe" xmlns:b="http://grimoire.gl/ns/recipe/buffer-prefix" xmlns:v="http://grimoire.gl/ns/recipe/variable-prefix">
  <textures>
    <fit name="depth" layout="RGB" format="UBYTE"/>
    <fit name="g-normal" layout="RGBA" format="UBYTE"/>
    <fit name="l-diffuse" layout="RGB" format="UBYTE"/>
    <fit name="l-specular" layout="RGB" format="UBYTE"/>
    <fit name="color" layout="RGBA" format="UBYTE"/>
    <fit name="hitarea" layout="RGB" format="UBYTE"/>
  </textures>
  <path>
    <hitarea b:OUT="hitarea"/>
    <g-buffer b:PRIMARY="g-normal" b:DEPTH="depth"/>
    <light b:PRIMARY="g-normal" b:DEPTH="depth" b:DLIGHT="l-diffuse" b:SLIGHT="l-specular"/>
    <forward b:DLIGHT="l-diffuse" b:SLIGHT="l-specular" b:OUT="color"/>
    <fxaa b:INPUT="color" b:OUTPUT="default" v:coeff="1.32"/>
  </path>
</recipe>
